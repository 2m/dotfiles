// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+q",
        "mac": "cmd+q",
        "command": "-workbench.action.quit"
    },
    // control characters from https://en.wikipedia.org/wiki/ASCII#ASCII_control_characters
    {
        "key": "cmd+a",
        "when": "terminalFocus",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\u0001"
        }
    },
    {
        "key": "cmd+c",
        "when": "terminalFocus",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\u0003"
        }
    },
    {
        "key": "cmd+d",
        "when": "terminalFocus",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\u0004"
        }
    },
    {
        "key": "cmd+e",
        "when": "terminalFocus",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\u0005"
        }
    },
    {
        "key": "cmd+u",
        "when": "terminalFocus",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\u0015"
        }
    },
    {
        "key": "cmd+w",
        "when": "terminalFocus",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\u0017"
        }
    },
    // moving/selecting words with command+left
    {
        "key": "cmd+left",
        "command": "-cursorHome",
        "when": "textInputFocus"
    },
    {
        "key": "cmd+left",
        "command": "cursorWordStartLeft",
        "when": "textInputFocus"
    },
    {
        "key": "alt+left",
        "command": "-cursorWordStartLeft",
        "when": "textInputFocus"
    },
    {
        "key": "shift+cmd+left",
        "command": "-cursorHomeSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+cmd+left",
        "command": "cursorWordStartLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+left",
        "command": "-cursorWordStartLeftSelect",
        "when": "textInputFocus"
    },
    // moving/selecting words with command+right
    {
        "key": "cmd+right",
        "command": "-cursorEnd",
        "when": "textInputFocus"
    },
    {
        "key": "cmd+right",
        "command": "cursorWordEndRight",
        "when": "textInputFocus"
    },
    {
        "key": "shift+cmd+right",
        "command": "-cursorEndSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+cmd+right",
        "command": "cursorWordEndRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+alt+right",
        "command": "-cursorWordEndRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "cmd+[",
        "command": "-editor.action.outdentLines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+[",
        "command": "workbench.action.navigateBack"
    },
    {
        "key": "ctrl+-",
        "command": "-workbench.action.navigateBack"
    },
    {
        "key": "cmd+]",
        "command": "-editor.action.indentLines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "cmd+]",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "ctrl+shift+-",
        "command": "-workbench.action.navigateForward"
    },
    // paste into terminal with shift as well
    {
        "key": "cmd+shift+v",
        "command": "workbench.action.terminal.paste",
        "when": "terminalFocus"
    },
    // toggle focus between editor and terminal with cmd+`
    {
        "key": "ctrl+`",
        "command": "-workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "cmd+`",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "cmd+`",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
]
