{
  "title": "System Shortcuts",
  "rules": [
    {
      "description": "Map cmd+h to cmd+option+f",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": {
            "key_code": "f",
            "modifiers": [
              "left_command",
              "left_option"
            ]
          }
        }
      ]
    },
    {
      "description": "Launch mission control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": {
            "key_code": "mission_control"
          }
        }
      ]
    }
  ]
}
